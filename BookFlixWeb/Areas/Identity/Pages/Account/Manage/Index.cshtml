@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.Input.ImageUrl))
            {
                <img src="@Model.Input.ImageUrl" style="width: 100%; height: auto;" class="img-fluid rounded-circle" alt="Profile Image">
            }
        </div>

        <div class="col-md-8">
            <h3 class="mb-4">@ViewData["Title"]</h3>
            <partial name="_StatusMessage" for="StatusMessage" />

            <form id="profile-form" method="post" enctype="multipart/form-data">
                <input asp-for="Input.ImageUrl" hidden />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label for="username">Username</label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>

                <div class="mb-3">
                    <label for="firstName">First Name</label>
                    <input asp-for="Input.FirstName" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="lastName">Last Name</label>
                    <input asp-for="Input.LastName" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="phoneNumber">Phone Number</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="profilePicture">Profile Picture</label>
                    <input asp-for="Input.ImageFile" type="file" class="form-control" />
                </div>

                <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg w-100">Save</button>
            </form>
        </div>
    </div>
</div>

<br />
<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
