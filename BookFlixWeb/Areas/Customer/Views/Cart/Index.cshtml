@model BookFlix.Models.ViewModels.ShoppingCartVM

<form method="post" class="container">
    <br />


    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6 text-primary" style="font-size: 20px">
                    <i class="bi bi-cart-fill"></i> &nbsp; Shopping Cart
                </div>
                <div class="col-6 text-end">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-info">Continue Shopping</a>
                </div>
            </div>
        </div>

        <div class="card-body">

            @foreach (var item in Model.ListCart)
            {
                <div class="row">
                    <div class="col-2 text-end">
                        <img src="@item.Product.ImageUrl" class="img-fluid" alt="Product Image" style="height:80px" />
                    </div>
                    <div class="col-5">
                        <h5><strong>@item.Product.Title</strong></h5>
                        <p><small>@item.Product.Author</small></p>
                    </div>
                    <div class="col-3">
                        <div class="text-md-right" style="padding-top: 5px;">
                            <h6><strong>Tk. @item.Product.Price <span class="text-muted"> x </span> @item.Count</strong></h6>
                        </div>
                        <div>
                            <a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-danger">
                                <i class="bi bi-dash"></i>
                            </a>

                            <a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-primary">
                                <i class="bi bi-plus"></i>
                            </a>

                        </div>


                    </div>
                    <div class="col-2">
                        <div>
                            <div class="mt-4">
                                <a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            }


        </div>

    </div>


    <div class="row">
        <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <span class="text-info">Total (BDT)</span>
                    <strong class="text-info">Tk.<span id="txtOrderTotal">@Model.OrderHeader.OrderTotal</span></strong>
                </li>
            </ul>
        </div>
    </div>

    @if (Model.OrderHeader.OrderTotal > 0)
    {
        <div class="row">
            <div class="col-12 text-end mt-2 ">
                <a asp-action="buy" class="btn btn-primary" style="padding-left:70px;padding-right:70px">
                    BUY NOW
                </a>
            </div>
        </div>

    }
</form>



